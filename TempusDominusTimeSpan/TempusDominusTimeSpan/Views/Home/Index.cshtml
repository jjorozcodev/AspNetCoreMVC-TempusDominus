@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <div class="input-group date" id="datetimepickerSelector" data-target-input="nearest">
                    <input type="text" class="form-control datetimepicker-input" data-target="#datetimepickerSelector" />
                    <div class="input-group-append" data-target="#datetimepickerSelector" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button onclick="showTime()" class="btn btn-primary">View Time Selected!</button>
</div>

@section scripts {

    <script>
        $(function () {
            $('#datetimepickerSelector').datetimepicker({
                format: 'LT'
            });
        });
        function showTime() {
            var dat = new Date($('#datetimepickerSelector').datetimepicker('viewDate'));
            alert('HOURS> ' + dat.getHours() + ' MINUTES> ' + dat.getMinutes() + ' TIME> ' + dat.toLocaleTimeString());
        }
    </script>

}